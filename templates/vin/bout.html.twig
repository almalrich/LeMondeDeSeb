<div id="page">
    <div id="img">

  {{ mets[0].title }}

    <img class="met" id="center" src="{{ mets[0].image }}">

    </div>


    <div id="img2">

        {{ mets[1].title }}

    <img class="met" id="lh" src="{{ mets[1].image }}">

    </div>

    <div id="img3">

        {{ mets[2].title }}


    <img class="met" id="lb" src="{{ mets[2].image }}">

    </div>


    <div id="contenant">

    {{ bout.name }}

    {{ bout.prix }}


    <img class="met" id="imgvin" src="{{ bout.image }}">

    </div>


    <div id="img4">

        {{ mets[3].title }}


    <img class="met" id="rh" src="{{ mets[3].image }}">

    </div>

    <div id="img5">

        {{ mets[4].title }}


