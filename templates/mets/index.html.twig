{% extends 'base.html.twig' %}

{% block title %}Mets index{% endblock %}

{% block body %}
    <h1>Mets index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for met in mets %}
            <tr>
                <td>{{ met.id }}</td>
                <td>{{ met.title }}</td>
                <td>{{ met.description }}</td>
                <td>
                    <a class="edit" href="{{ path('mets_show', {'id': met.id}) }}">show</a>
                    <a class="show" href="{{ path('mets_edit', {'id': met.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn-create" href="{{ path('mets_new') }}">Create new</a>
{% endblock %}
